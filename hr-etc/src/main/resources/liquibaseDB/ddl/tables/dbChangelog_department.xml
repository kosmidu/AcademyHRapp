<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="department-1.0.0" author="Maria" failOnError="true" runAlways="false" runOnChange="true">

        <comment>
            Create table 'department' to store department information
        </comment>

        <createTable tableName="department" schemaName="public">
            <column name="dep_id" type="bigint">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="dept_name" type="varchar(15)" />
        </createTable>

    </changeSet>

</databaseChangeLog>